<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_recycler_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView单type"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_recycler_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView多type"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_list_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView单type"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_list_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView多type"
        android:textAllCaps="false"/>

</LinearLayout>
